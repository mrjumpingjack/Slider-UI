<Window x:Class="SliderUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SliderUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="480" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Orientation="Horizontal">
            <Button Margin="5" Height="80" Width="220" FontSize="40" Content="General"/>
            <Button Margin="5" Height="80" Width="220" FontSize="40" Content="Special"/>
            <Button Margin="5" Height="80" Width="220" FontSize="40" Content="Settings"/>
        </StackPanel>
    </Grid>
</Window>
